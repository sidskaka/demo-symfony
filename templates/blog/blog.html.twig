{% extends "base.html.twig" %}
{% block body %}
   <h2>Ma liste de blog</h2>
   <section class="container">
      <div class="row">
         {% for blog in blogs %}
            <div>
               <article class="col-md-6">
                  <h1>{{ blog.titre }}</h1>
                  <figure class="col-lg-12">
                     <img src="{{ blog.image }}" alt=""/>
                  </figure>
                  <div class="article-intro col-lg-12">
                     <span>{{ blog.contenu | u.truncate(100) }}...</span>
                     <a href={{ path('app_blog_detail', {'id': blog.id}) }}>Lire la suite</a>
                  </div>
               </article>
            </div>
         {% endfor %}
      </div>
      <div>
         <a class="btn btn-primary" href="{{ path('app_add_blog') }}">Ajouter un blog</a>
      </div>
   </section>
{% endblock %}